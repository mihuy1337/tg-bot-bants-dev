{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts" // Включает все .ts файлы в папке src и подкаталогах
  ],
  "exclude": [
    "node_modules", // Исключает папку node_modules
    "**/*.test.ts" // Исключает все тестовые файлы
  ]
}
